@using Domain.Models
@using Web.Controllers;
@model IReadOnlyCollection<Favorite>

<h1 class="mb-5 mt-4 text-center">Favorites</h1>

<!-- List of lots -->
<div class="row g-4">
  @foreach (var favorite in Model)
  {
    <div class="col-md-12 col-lg-3 mb-4 mb-lg-0">
      <div class="card">
        <div class="card-body">
          @if (favorite.Lot.Images != null && favorite.Lot.Images.Count != 0)
          {
            <div class="text-center">
              <img src="@favorite.Lot.Images.ElementAt(0).Path" class="card-img-top mb-3" style="max-height:50vh; width:auto; max-width:100%" alt="@favorite.Lot.Name image" />
          </div>
          }
          <div class="mb-3">
            <h5 class="mb-3">@favorite.Lot.Name</h5>
            <p class="fs-5 fw-bold my-1">@favorite.Lot.Price $</p>
          </div>
          <div class="d-flex gap-3 align-items-center">

            <a class="btn btn-sm btn-outline-secondary" asp-controller="@FavoriteController.Name"
             asp-action="@nameof(FavoriteController.DeleteFavorite)" asp-route-id="@favorite.Lot.Id">Remove favorite</a>
            
            <a class="btn btn-sm btn-outline-primary" asp-controller="@LotController.Name"
             asp-action="@nameof(LotController.Details)" asp-route-id="@favorite.Lot.Id">Details</a>

          </div>
        </div>
      </div>
    </div>
  }
</div>