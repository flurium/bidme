@using Domain.Models
@using Web.Controllers
@model List<Order>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div style="margin-bottom:1%">
    <a class="btn btn-light btn-sm" asp-controller="@UserController.Name" asp-action="@nameof(UserController.Lots)">Your Lots</a>
    <a class="btn btn-light btn-sm" asp-controller="@UserController.Name" asp-action="@nameof(UserController.Archive)" >Archive</a>
    <a class="btn btn-light btn-sm" asp-controller="@UserController.Name" asp-action="@nameof(UserController.Bids)" >Your Bids</a>
</div>

<h4>@ViewBag.Page</h4>
<!-- List of lots -->
<div class="row g-4">
  @foreach (var lot in Model)
  {
    <div class="col-md-12 col-lg-3 mb-4 mb-lg-0">
      <div class="card">
        <div class="card-body">
          @if (lot.Lot.Images != null && lot.Lot.Images.Count != 0)
          {
            <img src="@lot.Lot.Images.ElementAt(0).Path" class="card-img-top mb-3"  alt="@lot.Lot.Name image" />
          }
          <div class="mb-3">
            <h5 class="mb-3">@lot.Lot.Name</h5>
            <p class="fs-5 fw-bold my-1">@lot.Lot.Price $</p>
            <p class="fs-5 fw-bold my-1">Your bid: @lot.OrderPrice $</p>
          </div>
          <div class="d-flex gap-3 align-items-center pb-2 mb-1">
            <a class="btn btn-sm btn-outline-primary" asp-controller="@LotController.Name"
              asp-action="@nameof(LotController.Details)" asp-route-id="@lot.Lot.Id"
            >Details</a>
          </div>
        </div>
      </div>
    </div>
  }
</div>
